<div class="row">
  <div class="col-lg-12">
    <h1 class="pager-header">Editando</h1>
  </div>
</div>
<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-lg-6">
          <%= form_with(model: [ :admins_backoffice, @admin ], local:true ) do |form|  %>

            <div class="form-group">
              <%= form.label :email %>
              <%= form.text_field :email,class:"form-control", placeholder:"Email do administrador"%>
            </div>

            <div class="form-group">
              <%= form.label :password%>
              <%= form.text_field :senha, class: "form-control", placeholder: "Passaword"%>
            </div>

            <div class="form-group">
              <%= form.label :password_confirmation %>
              <%= form.text_field :password_confirtmation, class: "form-control", placeholder: "Password confirmation" %>
            </div>

            <button type="submit" class="btn btn-default">Salvar</button>

          <% end %>
        </div>
        <!-- /.col-lg-6 (nested) -->
      </div>
      <!-- /.row (nested) -->
    </div>
    <!-- /.panel-body -->
  </div>
  <!-- /.panel -->
</div>
