<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card-6 border-0">
      <div class="row d-flex">
        <div class="col-lg-6">
          <div class="card-6 pb-5">
            <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
              <img src="https://i.pinimg.com/736x/02/53/5e/02535e10c3b9585148c68a89e3abb6ae.jpg" class="image">
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card-9 card border-0 px-4 py-5">
            <h2 style="color: #119cff;">Entrar</h2>
            <div class="row px-3">
              <h6 class="mb-0 text-sm"><%= f.label :email, class:"mb-1" %></h6>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-4", placeholder:"Entre com um email valido" %>
            </div>
            <div class="row px-3">
              <h6 class="mb-0 text-sm"><%= f.label :password, class: "mb-1" %></h6>
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"Digite a senha" %>
            </div>
            <div class="row px-3 mb-4">
              <div class="custom-control custom-checkbox custom-control-inline">
                  <%= f.check_box :remember_me, id: 'chk1', class: "form-check-input" %>
                  <%= f.label :remember_me, for: 'chk1', class: "custom-control-label text-sm" %>
              </div>
            </div>
            <div class="row mb-3 px-3">
              <%= f.submit "Entrar", class: "btn btn-blue text-center" %>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-blue py-4">
        <div class="row px-3">
          <small class="ml-4 ml-sm-5 mb-2"  style="text-align: center;"> Copyright &copy; 2023. Todos os direitos reservados.</small>
        </div>
      </div>
    </div>
  </div>
<% end %>

