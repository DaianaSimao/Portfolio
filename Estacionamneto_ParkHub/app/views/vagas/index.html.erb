<div style="display: flex; align-items: center;">
  <h1 style="margin-left:100px; margin-right: 20px">Vagas</h1>
  <% if current_user && current_user.admin? %>
    <%= link_to "Nova vaga", new_vaga_path, class: "btn4" %>
  <% end %>
</div>
<div class="container container-vagas mt-2">
  <table class="table table-borderless table-responsive card-7">
    <thead>
      <tr class="border-bottom">
        <% i = 1  %>
        <% while i <= 3%>
          <th>
            <span></span>
          </th>
          <th>
            <span>Status</span>
          </th>
          <% if current_user && current_user.admin? %>
            <th>
              <span></span>
            </th>
          <% end %>
          <% i += 1%>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @vagas.each_slice(3) do |grupo_vagas| %>
        <tr class="border-bottom">
          <% grupo_vagas.each do |vaga| %>
            <td>
              <div>
                <span class="d-block font-weight-bold"><%= vaga.vaga_nome %></span>
              </div>
            </td>
                  <td>
              <div>
                <span class="d-block font-weight-bold"><%= vaga.status == true ? "Disponivel" : "Ocupado"%></span>
              </div>
            </td>
            <% if current_user && current_user.admin? %>
              <td>
                <div class="d-flex flex-row align-items-center">
                  <div class="d-flex flex-column ml-2">
                    <%= link_to edit_vaga_url(vaga), class: "btn5 ", style: "margin-right: 10px;" do %>
                      <i class="bi bi-pencil-square"></i>
                    <% end %>
                  </div>
                  <div class="d-flex flex-column ml-2">
                    <%= link_to "#", class: "btn6 " do %>
                      <i class="bi bi-trash"></i>
                    <%end%>
                  </div>
                </div>
              </td>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </tbody>
  </table>
</div>