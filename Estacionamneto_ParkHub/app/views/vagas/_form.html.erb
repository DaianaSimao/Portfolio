            <%= form.radio_button :status, 'ocupada', id: 'status_ocupada', class: 'form-check-input', checked: vaga.status == 'ocupada' %>
            <%= form.label :status, ' Ocupada', class: 'form-check-label', for: 'status_ocupada' %>
          </div>
          <div class="form-check form-check-inline mb-4">
            <%= form.radio_button :status, 'disponivel', id: 'status_disponivel', class: 'form-check-input', checked: vaga.status == 'disponivel' %>
            <%= form.label :status, ' DisponÃ­vel', class: 'form-check-label', for: 'status_disponivel' %>
          </div>
          <div class="col-lg-4 col-md-12">
            <div class="form-floating">
              <%= form.text_field :vaga, class:"form-control", placeholder:"Digite o andar",required: true %>
              <%= form.label :vaga %>
            </div>
          </div>
          <div>
            <div class="col-lg-4 mt-3 d-flex">
              <%= form.submit "Atualizar vaga", class: "btn text-uppercase ", style: "margin-right: 10px;" %>
              <%= link_to "Vagas", vagas_path, class: "btn text-uppercase ml-4" %>
