<%= form_with(model: preco) do |form| %>
  <% if preco.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(preco.errors.count, "error") %> prohibited this preco from being saved:</h2>

      <ul>
        <% preco.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
      <div class="card p-4 mt-5">
          <div class="row g-3">
              <div class="col-12 mb-4">
                  <h4>Cadastro de Preços</h4>
                  <span class="text-muted">Preencha todos os dados corretamente:</span>
              </div>
              <div class="col-lg-3 col-md-12">
                  <div class="form-floating">
                      <%= form.number_field :preco, step: :any, class:"form-control", placeholder:"Digite o andar",required: true %>
                      <%= form.label :preco %>
                  </div>
              </div>
              <div class="col-lg-3 col-md-12">
                <div class="form-floating">
                  <%= form.select :tipo, options_for_select(@tipos), { include_blank: true }, class: "form-select" %>
                  <%= form.label :tipo %>
                </div>
              </div>
              <div class="col-12 mt-4">
                  <%= form.submit "Add preços" , class:"btn btn-primary text-uppercase"%><i class="fa fa-plane ms-3"></i>
                  <%= link_to "Volta para preços", precos_path , class: "btn btn-secondary text-uppercase"%>
              </div>
          </div>
      </div>
  </div>
<% end %>
