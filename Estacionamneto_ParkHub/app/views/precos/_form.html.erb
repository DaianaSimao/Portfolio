<%= form_with(model: preco) do |form| %>
  <div class="container">
    <div class="card p-4 mt-5">
      <div class="row g-3">
        <div class="col-12 mb-4">
          <h4>Cadastro de Preços</h4>
          <span class="text-muted">Preencha todos os dados corretamente:</span>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="form-floating">
            <%= form.number_field :preco_hora,  min: "0", step: "0.01", class:"form-control", placeholder:"Digite o andar",required: true %>
            <%= form.label :preco_hora %>
          </div>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="form-floating">
            <%= form.text_field :tipo, class:"form-control", placeholder:"cor" %>
            <%= form.label :tipo %>
          </div>
        </div>
        <div class="col-12 mt-4">
          <div class="btn-group" role="group" aria-label="Botões">
            <%= form.submit "Add preços", class: "btn btn-success text-uppercase",  style: "margin-right: 10px;" %>
            <%= link_to "Volta para preços", precos_path, class: "btn btn-danger text-uppercase" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
